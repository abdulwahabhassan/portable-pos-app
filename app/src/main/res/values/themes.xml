<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.BanklyKozenPos" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/grey</item>
    </style>

    <style name="Theme.App.BanklySplash" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_bankly_splash_icon</item>

        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.BanklyKozenPos</item>
    </style>
</resources>